{
    "shell": "src/main-application.js",
    "entrypoint": "index.html",
    "fragments": [
        "src/views/home-page.js",
        "src/views/settings-page.js",
        "src/views/about-page.js",
        "src/views/login-page.js",
        "src/components/wc-input-field.js",
        "src/components/wc-baseterms-viewer.js",
        "src/components/wc-facets-viewer.js",
        "src/components/wc-overview.js",
        "src/components/wc-code-viewer.js",
        "src/components/wc-feedback-dialog.js",
        "src/components/wc-progress-bar.js"
    ],
    "npm": true,
    "moduleResolution": "node",
    "sources": [
        "src/**/*",
        "package.json"
    ],
    "extraDependencies": [
        "node_modules/@webcomponents/webcomponentsjs/**"
    ],
    "builds": [
        {
            "bundle": true,
            "js": {
                "minify": false,
                "compile": "es5",
                "transformModulesToAmd": true
            },
            "addServiceWorker": true,
            "addPushManifest": true
        }
    ],
    "lint": {
        "rules": [
            "polymer-3"
        ],
        "ignoreWarnings": ["could-not-resolve-reference"]
    }
}