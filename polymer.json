{
    "shell": "src/main-application.js",
    "entrypoint": "index.html",
    "fragments": [
        "src/wc-header.js",
        "src/wc-body.js",
        "src/wc-body-analyser.js",
        "src/wc-body-classifier.js",
        "src/wc-body-showcode.js",
        "src/wc-progress-bar.js",
        "src/wc-footer.js"
    ],
    "npm": true,
    "moduleResolution": "node",
    "sources": [
        "src/**/*",
        "package.json"
    ],
    "extraDependencies": [
        "node_modules/@webcomponents/webcomponentsjs/**"
    ],
    "builds": [
        {
            "bundle": true,
            "js": {
                "minify": false,
                "compile": "es5",
                "transformModulesToAmd": true
            },
            "addServiceWorker": true,
            "addPushManifest": true
        }
    ],
    "lint": {
        "rules": [
            "polymer-3"
        ],
        "ignoreWarnings": ["could-not-resolve-reference"]
    }
}